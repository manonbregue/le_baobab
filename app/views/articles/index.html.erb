<% content_for :title, "Articles" %>

<h1>Articles</h1>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-4">
  
    <%= render article %>
    <p>
      <%= link_to "Show this article", article, class:"btn btn-success" %>
    </p>
    </div>
  <% end %>
</div>

<%= link_to "New article", new_article_path, class:"btn btn-secondary" %>
